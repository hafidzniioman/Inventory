<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>

<div>
  <label>Inventory</label>
  <select name="inventory">
    <% inventory.forEach(inventory => { %> <% if(inventory.id ===
    book.inventory){ %>
    <option selected label="<%= inventory.name %>" value="<%= inventory.id %>">
      <% } else { %> </option
    ><option label="<%= inventory.name %>" value="<%= inventory.id %>">
      <% } %> <% }) %>
    </option></select
  >
</div>

<div>
  <label>Publish Date</label>
  <input
    type="date"
    name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"
  />
</div>

<div>
  <label>Page Count</label>
  <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" />
</div>

<div>
  <label>Cover</label>
  <input type="file" name="cover" />
</div>

<div>
    <label>Descriptions</label>
    <textarea name="description"><%= book.description %></textarea>
</div>
